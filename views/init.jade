doctype html
html(lang="en", ng-app="hmp", ng-controller="AppController")
  head
    base(href="/bootstrap")
    title Harvest Moon Project

    //- Viewport mobile tag for sensible mobile support
    meta(name="viewport",content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no")

    //- STYLES
    link(rel="stylesheet", href="/styles/importer.css")
    //- STYLES END

    //- ANGULAR TEMPLATES
    - var tmp = clearString("views/templates/debugjade")
    script(type="text/ng-template", id="#{clearIDString(tmp)}")!= templateRender(tmp, context)
    - var tmp = clearString("views/templates/debug/footerjade")
    script(type="text/ng-template", id="#{clearIDString(tmp)}")!= templateRender(tmp, context)
    - var tmp = clearString("views/templates/debug/mapjade")
    script(type="text/ng-template", id="#{clearIDString(tmp)}")!= templateRender(tmp, context)
    - var tmp = clearString("views/templates/debug/toolbarjade")
    script(type="text/ng-template", id="#{clearIDString(tmp)}")!= templateRender(tmp, context)
    - var tmp = clearString("views/templates/gamejade")
    script(type="text/ng-template", id="#{clearIDString(tmp)}")!= templateRender(tmp, context)
    //- ANGULAR TEMPLATES END
  body
    span(ui-view)
    //- SCRIPTS
