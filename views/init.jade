    script(src="/third-party/BlocksJS/src/js/container.js")
    script(src="/third-party/BlocksJS/src/js/controller.js")
    script(src="/third-party/BlocksJS/src/js/eventDispatcher.js")
    script(src="/third-party/BlocksJS/src/js/game.js")
